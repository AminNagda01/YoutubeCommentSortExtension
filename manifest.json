{
    "manifest_version": 3,
    "name": "Youtube Comment Date Search",
    "version": "0.2.1",
    "description": "Searches for youtube comments in a date range",
    "permissions": [ 
        "activeTab",
        "tabs",
        "downloads"
        ],
    "icons": { 
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "host_permissions": ["http://127.0.0.1:5000/*"],
    "action": {
        "default_popup": "/popup/popup.html",
        "default_title": "Youtube Comment Date Search",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    }
}